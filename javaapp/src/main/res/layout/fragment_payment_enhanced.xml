<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@android:color/white" tools:context=".fragment.PaymentFragment">

    <!-- Header with back button -->
    <com.google.android.material.appbar.AppBarLayout android:id="@+id/app_bar" android:layout_width="0dp" android:layout_height="wrap_content" android:elevation="0dp" app:elevation="0dp" android:background="@android:color/white" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical" android:paddingStart="24dp" android:paddingEnd="24dp" android:paddingTop="16dp" android:paddingBottom="16dp" android:background="@android:color/white">

            <ImageView android:id="@+id/btn_back" android:layout_width="48dp" android:layout_height="48dp" android:src="@drawable/ic_right_arrow" android:rotation="180" android:background="?attr/selectableItemBackgroundBorderless" android:contentDescription="Back" />

            <TextView android:id="@+id/tv_title" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/payment_details" android:textColor="@color/colorPrimary" android:textSize="@dimen/text_size_xlarge" android:textStyle="bold" android:gravity="center" />

            <View android:layout_width="48dp" android:layout_height="48dp" />

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <ScrollView android:layout_width="0dp" android:layout_height="0dp" android:fillViewport="true" android:background="@android:color/white" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@id/app_bar">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:background="@android:color/white" android:padding="16dp">

            <!-- Selection Details Card -->
            <com.google.android.material.card.MaterialCardView android:id="@+id/card_selection_details" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="24dp" app:cardCornerRadius="12dp" app:cardElevation="4dp" app:strokeWidth="2dp" app:strokeColor="@color/colorPrimary">

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="20dp">

                    <!-- Organization Name -->
                    <TextView android:id="@+id/tv_org_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/organization_name" android:textSize="@dimen/text_size_large" android:textStyle="bold" android:textColor="@color/colorPrimary" android:layout_marginBottom="16dp" />

                    <!-- Details Grid -->
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">

                        <!-- Zone Name -->
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="12dp">

                            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/zone_label" android:textSize="@dimen/text_size_medium" android:textColor="@color/colorTextSecondary" />

                            <TextView android:id="@+id/tv_zone_name" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2" android:text="@string/zone_name_placeholder" android:textSize="@dimen/text_size_medium" android:textStyle="bold" android:textColor="@color/colorTextPrimary" />

                        </LinearLayout>

                        <!-- Vehicle Number -->
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="12dp">

                            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/vehicle_label" android:textSize="@dimen/text_size_medium" android:textColor="@color/colorTextSecondary" />

                            <TextView android:id="@+id/tv_vehicle_number" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2" android:text="@string/vehicle_number_placeholder" android:textSize="@dimen/text_size_medium" android:textStyle="bold" android:textColor="@color/colorTextPrimary" />

                        </LinearLayout>

                        <!-- Rate Name -->
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="12dp">

                            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/rate" android:textSize="@dimen/text_size_medium" android:textColor="@color/colorTextSecondary" />

                            <TextView android:id="@+id/tv_rate_name" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2" android:text="@string/rate_name_placeholder" android:textSize="@dimen/text_size_medium" android:textStyle="bold" android:textColor="@color/colorTextPrimary" />

                        </LinearLayout>

                        <!-- Time Description -->
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="16dp">

                            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/duration" android:textSize="@dimen/text_size_medium" android:textColor="@color/colorTextSecondary" />

                            <TextView android:id="@+id/tv_time_desc" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2" android:text="@string/time_description_placeholder" android:textSize="@dimen/text_size_medium" android:textStyle="bold" android:textColor="@color/colorTextPrimary" />

                        </LinearLayout>

                        <!-- Total Amount -->
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:background="@drawable/total_background" android:padding="16dp">

                            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/total_amount" android:textSize="@dimen/text_size_large" android:textStyle="bold" android:textColor="@android:color/white" />

                            <TextView android:id="@+id/tv_total_amount" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="$0.00" android:textSize="@dimen/text_size_xlarge" android:textStyle="bold" android:textColor="@android:color/white" android:gravity="end" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Status Section -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginBottom="24dp">

                <!-- Status Message -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical" android:layout_marginBottom="16dp">

                    <ProgressBar android:id="@+id/progress_bar" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginEnd="12dp" android:visibility="gone" android:indeterminateTint="@color/colorPrimary" />

                    <TextView android:id="@+id/tv_status_message" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/ready_to_connect_reader" android:textSize="@dimen/text_size_large" android:textColor="@color/colorTextPrimary" />

                </LinearLayout>

                <!-- Connection Status -->
                <LinearLayout android:id="@+id/layout_connection_status" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:background="@drawable/banner_background" android:padding="16dp" android:gravity="center_vertical" android:visibility="gone" android:backgroundTint="@color/colorPrimary">

                    <ImageView android:id="@+id/iv_reader_icon" android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_check" android:layout_marginEnd="12dp" app:tint="@android:color/white" />

                    <TextView android:id="@+id/tv_connected_reader" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/connected_reader_name" android:textSize="@dimen/text_size_medium" android:textColor="@android:color/white" />

                </LinearLayout>

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">

                <!-- Discover Reader Button -->
                <com.google.android.material.button.MaterialButton android:id="@+id/btn_discover_reader" android:layout_width="match_parent" android:layout_height="56dp" android:text="@string/discover_reader" android:textSize="@dimen/text_size_large" android:layout_marginBottom="16dp" app:cornerRadius="12dp" app:icon="@drawable/ic_settings" app:iconGravity="textStart" app:iconPadding="8dp" android:backgroundTint="@color/colorPrimary" />

                <!-- Collect Payment Button -->
                <com.google.android.material.button.MaterialButton android:id="@+id/btn_collect_payment" android:layout_width="match_parent" android:layout_height="56dp" android:text="@string/collect_payment_button" android:textSize="@dimen/text_size_large" android:enabled="false" app:cornerRadius="12dp" app:icon="@drawable/ic_check" app:iconGravity="textStart" app:iconPadding="8dp" android:backgroundTint="@color/colorPrimary" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout> 